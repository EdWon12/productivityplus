{% extends 'home/index.html.twig' %}

{% block title %}Forgotten Password!{% endblock %}

{% block body %}
    <form method="post" class="form-inline d-flex">
    	<div class="container projects-section">
    		 <div class="col-md-10 col-lg-8 mx-auto text-center">
		        <h1 class="h3 mb-3 font-weight-normal text-black">Forgotten Password</h1>
		        <div class="row justify-content-center mb-5">
		        	<label for="inputEmail" class="sr-only form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0">Email</label>
		        	<input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
		        </div>

        <button class="btn btn-lg btn-primary" type="submit">
            Send mail !
        </button>

    </form>
{% endblock %}