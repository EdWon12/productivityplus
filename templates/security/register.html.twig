{% extends 'home/index.html.twig' %}

{% block title %}Register !{% endblock %}

{% block body %}
    <div class="container projects-section">
        <form method="post" class="form-inline d-flex">
            <div class="col-md-10 col-lg-8 mx-auto text-center">
                <h1 class="h3 mb-3 text-black font-weight-normal">Register</h1>
                <div class="row justify-content-center">
                    <label for="inputEmail" class="sr-only">Email</label>
                </div>
                <div class="row justify-content-center mb-5">
                    <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                </div>
                <div class="row justify-content-center">
                    <label for="inputPassword" class="sr-only">Password</label>
                </div>
                <div class="row justify-content-center mb-3">
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
                </div>
                <div class="row justify-content-center mb-5">
                    <input type="checkbox" name="notificationCB" id="notificationCB" class="form-control" checked>
                    <label for="notificationCB">Receive notifications by email</label>
                </div>

                
                <div class="row justify-content-center">
                    <button class="btn btn-lg btn-primary" type="submit">
                        Register
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}